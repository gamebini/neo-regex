# NEO Regex Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/neoregex

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=20

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis password (if required)
# REDIS_PASSWORD=your-redis-password

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Secret Key (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration
JWT_EXPIRE=24h

# Session Secret (for express-session if used)
SESSION_SECRET=your-session-secret-key

# Bcrypt Salt Rounds
BCRYPT_ROUNDS=12

# ============================================================================
# API KEYS & EXTERNAL SERVICES
# ============================================================================

# OpenAI API Key (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Claude API Key (alternative to OpenAI)
CLAUDE_API_KEY=your-claude-api-key

# Google Analytics (optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================================================
# PAYMENT INTEGRATION (STRIPE)
# ============================================================================

# Stripe Secret Key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe Publishable Key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe Webhook Secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email service provider (gmail, sendgrid, mailgun, etc.)
EMAIL_SERVICE=gmail

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (if using SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================================================
# FILE STORAGE & CDN
# ============================================================================

# AWS S3 Configuration (optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=neo-regex-assets

# Cloudinary (for image processing)
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# ============================================================================
# RATE LIMITING
# ============================================================================

# General API rate limit (requests per 15 minutes)
RATE_LIMIT_GENERAL=1000

# Regex testing rate limit (requests per minute)
RATE_LIMIT_REGEX=30

# Auth rate limit (login attempts per hour)
RATE_LIMIT_AUTH=10

# ============================================================================
# SECURITY HEADERS
# ============================================================================

# Content Security Policy
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline' https://fonts.googleapis.com"
CSP_FONT_SRC="'self' https://fonts.gstatic.com"

# ============================================================================
# DEVELOPMENT OPTIONS
# ============================================================================

# Enable debug mode
DEBUG=false

# Mock external APIs in development
MOCK_APIS=false

# Database seeding
SEED_DATABASE=false

# ============================================================================
# PRODUCTION OPTIMIZATIONS
# ============================================================================

# Enable compression
ENABLE_COMPRESSION=true

# Enable HTTP/2
ENABLE_HTTP2=false

# Trust proxy (for load balancers)
TRUST_PROXY=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable AI features
ENABLE_AI_FEATURES=true

# Enable user registration
ENABLE_USER_REGISTRATION=true

# Enable premium features
ENABLE_PREMIUM_FEATURES=true

# Enable team collaboration
ENABLE_TEAM_FEATURES=false

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================

# Google Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Mixpanel
# MIXPANEL_TOKEN=your-mixpanel-token

# PostHog
# POSTHOG_API_KEY=your-posthog-api-key

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================

# Database backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# Backup retention days
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================

# SSL Certificate paths (for HTTPS)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Force HTTPS redirect
FORCE_HTTPS=false

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache TTL in seconds
CACHE_TTL=3600

# Enable API response caching
ENABLE_API_CACHE=true

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================

# Webhook secret for incoming webhooks
WEBHOOK_SECRET=your-webhook-secret

# Webhook timeout in milliseconds
WEBHOOK_TIMEOUT=5000